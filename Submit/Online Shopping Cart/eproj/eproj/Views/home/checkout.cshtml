@model IEnumerable<eproj.Models.order_detail>

@{
    ViewBag.Title = "checkout";
    Layout = "~/Views/shared/_Layout1.cshtml";
}




<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1 class="page-name">Checkout</h1>
                    <ol class="breadcrumb">
                        <li><a href="/home/index">Home</a></li>
                        <li class="active">checkout</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="page-wrapper">
    <div class="checkout shopping">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="block billing-details">
                        <h4 class="widget-title">Billing Details</h4>
        
                        
@using (Html.BeginForm("checkout", "home", FormMethod.Post))
{
    <form class="checkout-form">
        <div class="form-group">
            <label for="full_name">Full Name</label>
            <input type="text" name="full_name" class="form-control"  placeholder="full_name">
        </div>
        <div class="form-group">
            <label for="user_address">Address</label>
            <input type="text" name="deliver_address" class="form-control"  placeholder="deliver_address">
        </div>
        
            <div class="form-group">
                <label for="user_post_code">Zip Code</label>
                <input type="number" name="zipcode" class="form-control" value="">
            </div>
          
        
 <div class="form-group">
            <label for="user_country">order date</label>
            <input type="date" class="form-control"  placeholder="order date" name="order_date">
        </div>

        <div class="form-group">
            <label for="product-quantity">Quantity</label>
            <input type="number" class="form-control" placeholder="quantity" name="quantity">
        </div>
        <div class="form-group">
            <label for="product-quantity">price</label>
            <input type="number" class="form-control" placeholder="amount" name="amount">
        </div>
        <div class="form-group">
            <label for="type of payment">Type Of Payment</label>
            @Html.DropDownList("pay_id", null, new { @class = "form-control", required = "required" })

        </div>
        <div class="form-group">
            <label for="card-number">Card Number <span class="required">*</span></label>
            <input class="form-control" type="number" placeholder="•••• •••• •••• ••••" name="creditcard_no">
        </div>
        <div class="form-group half-width padding-right">
            <label for="card-expiry">Expiry (MM/YY) <span class="required">*</span></label>
            <input  class="form-control" type="date" placeholder="MM / YY" name="expire_date">
        </div>
        <div class="form-group">
            <label for="contact number">Contact</label>
            <input type="tel" class="form-control"  placeholder="phone number" name="contact_no">
        </div>
        <div class="form-group">
            <label for="order_status">order status</label>
            <input type="text" class="form-control"  placeholder="phone number" name="order_status">
        </div>
        

        @ViewBag.err
      

  

    <a href="/home/confirmation"><input type="submit" value="place order" /></a>

        <a href="/home/orders">details of order</a>

     





    </form>
}



                    </div>
        
                </div>
                <div class="col-md-4">
                    <div class="product-checkout-details">

                        <div class="block">
                            <h4 class="widget-title">Order Summary</h4>
                            
                            <div class="media product-card">
                              

                                <div class="media-body">
                                    <h4 class="media-heading"><a href="/home/productdetails">hello</a></h4>
                                    <p class="price">$799</p>
                                    <span class="remove">Remove</span>
                                </div>
                            </div>

                            <ul class="summary-prices">
                                <li>
                                    <span>Subtotal:</span>
                                    <span class="price">$96</span>
                                </li>
                                <li>
                                    <span>Shipping:</span>
                                    <span>Free</span>
                                </li>
                            </ul>
                            <div class="summary-total">
                                <span>Total</span>
                                <span>$250</span>
                            </div>
                                
                            <div class="verified-icon">
                                <img src="~/images/shop/verified.png">
                            </div>
                        </div>
                        

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
