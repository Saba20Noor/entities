@model eproj.Models.feedback
@{
    
    Layout = "~/Views/shared/_Layout1.cshtml";
}



<section class="signin-page account">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="block text-center">
                   
                    <h2 class="text-center">Thank You Customer</h2>
         
                    @using (Html.BeginForm("feedback", "home", FormMethod.Post))
                    {
                        <form class="text-left clearfix" action="/home/index">



                            <p class="mt-20">How's your experience here</p>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="your feedback" name="feedbacks">
                            </div>

                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="your email address" name="feedback_email">
                            </div>
                            @ViewBag.err
                            <div class="text-center">
                                @*<a href="/home/confirmation">*@<button type="submit" class="btn btn-main pull-center">send</button>
                            </div>
                        </form>
                    }

                   
                </div>
            </div>
        </div>
    </div>
   
</section>

